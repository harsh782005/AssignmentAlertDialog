<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/hori4"
        app:layout_constraintGuide_percent="0.04"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/vert99"
        app:layout_constraintGuide_percent="0.099"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/hori20"
        app:layout_constraintGuide_percent="0.20"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/vert91"
        app:layout_constraintGuide_percent="0.91"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/vert99"
        app:layout_constraintEnd_toEndOf="@id/vert91"
        app:layout_constraintTop_toTopOf="@id/hori4"
        app:layout_constraintBottom_toBottomOf="@id/hori20"
        android:text="@string/enteranynum"
        android:textStyle="bold|italic"
        android:textSize="50sp"
        android:textAlignment="center"
        android:background="#663CAF"
        android:textColor="@color/white"
        android:id="@+id/txt"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37"
        android:id="@+id/hori37"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46"
        android:id="@+id/hori46"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/vert99"
        app:layout_constraintEnd_toEndOf="@id/vert91"
        app:layout_constraintTop_toTopOf="@id/hori37"
        app:layout_constraintBottom_toBottomOf="@id/hori46"
        android:hint="no."
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:inputType="number|numberDecimal"
        android:background="#817F7F"
        android:id="@+id/no"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        android:id="@+id/hori70"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83"
        android:id="@+id/hori83"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.23"
        android:id="@+id/vert23"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80"
        android:id="@+id/vert80"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/vert23"
        app:layout_constraintEnd_toEndOf="@id/vert80"
        app:layout_constraintTop_toTopOf="@id/hori70"
        app:layout_constraintBottom_toBottomOf="@id/hori83"
        android:text="@string/cal"
        android:textStyle="bold|italic"
        android:textSize="35sp"
        android:id="@+id/btnCalculate"/>
</androidx.constraintlayout.widget.ConstraintLayout>